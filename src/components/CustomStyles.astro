---
import '@fontsource-variable/onest';
import '@fontsource-variable/outfit';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Outfit Variable';
    --aw-font-serif: 'Outfit Variable';
    --aw-font-heading: 'Onest Variable';

    --aw-color-primary: rgb(207, 56, 18);
    --aw-color-secondary: rgb(11, 40, 133);
    --aw-color-accent: rgb(185, 32, 103);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Outfit Variable';
    --aw-font-serif: 'Outfit Variable';
    --aw-font-heading: 'Onest Variable';

    --aw-color-primary: rgb(207, 56, 18);
    --aw-color-secondary: rgb(11, 40, 133);
    --aw-color-accent: rgb(185, 32, 103);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(232, 235, 240);
    --aw-color-text-muted: rgba(144, 157, 175, 0.95);
    --aw-color-bg-page: rgb(36, 36, 38);

    ::selection {
      background-color: rgb(222, 224, 96);
      color: rgb(31, 30, 32);
    }
  }

  .btn:hover {
    box-shadow: 0 0 0 3px var(--aw-color-primary);
  }

  .aw-link-active {
    color: var(--aw-color-primary);
    text-decoration: underline;
  }
  .dark .aw-link-active {
    color: white;
  }
  .logo:after {
    content: '_';
    opacity: 0;
    animation: cursor 1s infinite;
  }
  @keyframes cursor {
    0% {
      opacity: 0;
    }
    40% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>
