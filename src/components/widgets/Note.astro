---
import { findLatestPosts } from '~/utils/blog';

const posts = await findLatestPosts({ count: 1 });
---

<div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-4 -mb-6"></div>

<section class="bg-primary not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
    <span class="font-bold">Jaunākais blogā:</span>

    <a href=`/${posts[0].slug}` class="hover:underline">{posts[0].title}</a>
  </div>
</section>
